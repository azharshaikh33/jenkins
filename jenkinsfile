pipeline {
    agent any

    environment { 
        ENV_URL = "pipeline.learning.com"
    }

    stages {
        stage('Stage Name - 1') {
            steps {
                sh 'echo This is my first stage in the Jenkins pipeline'
            }
        }

        stage('Stage Name - 2') {
            steps {
                sh 'echo printing the ${ENV_URL}'
            }
        }

        stage('Stage Name - 3') {
            steps {
                sh '''

                echo i am learning jenkins
                echo lets learn to the core
                echo well it seems easy

                '''
            }
        }
    }
}
